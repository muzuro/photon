{
  "filtered": {
    "query": {
      "function_score": {
        "boost_mode": "multiply",
        "query": {
          "bool": {
            "must": {
              "bool": {
                "should": [
                  {
                    "match": {
                      "collector.default": {
                        "fuzziness": 0,
                        "query": "${query}",
                        "minimum_should_match": "${should_match}",
                        "analyzer": "search_ngram",
                        "prefix_length": 2
                      }
                    }
                  },
                  {
                    "match": {
                      "collector.${lang}": {
                        "fuzziness": 0,
                        "query": "${query}",
                        "minimum_should_match": "${should_match}",
                        "analyzer": "search_ngram",
                        "prefix_length": 2
                      }
                    }
                  }
                ],
                "minimum_should_match": 1
              }
            },
            "should": [
              {
                "match": {
                  "name.${lang}.raw": {
                    "query": "${query}",
                    "boost": 200,
                    "analyzer": "search_raw"
                  }
                }
              },
              {
                "match": {
                  "collector.${lang}.raw": {
                    "query": "${query}",
                    "boost": 100,
                    "analyzer": "search_raw"
                  }
                }
              }
            ]
          }
        },
        "score_mode": "multiply",
        "functions": [
          {
            "script_score": {
              "script": "1 + doc['importance'].value * 100"
            }
          },
          {
            "script_score": {
              "script": "dist = doc['coordinate'].distanceInKm(lat, lon); 0.5 + ( 1.5 / (1.0 + dist/40.0) )",
              "params": {
                "lat": ${lat},
                "lon": ${lon}
              }
            }
          }
        ]
      }
    },
    "filter": {
      "or": {
        "filters": [
          {
            "missing": {
              "field": "housenumber"
            }
          },
          {
            "query": {
              "match": {
                "housenumber": {
                  "query": "${query}",
                  "analyzer": "standard"
                }
              }
            }
          },
          {
            "exists": {
              "field": "name.${lang}.raw"
            }
          }
        ]
      }
    }
  }
}
